{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        //"moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node", "vitest"]
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
        "esm": true
    }
}
