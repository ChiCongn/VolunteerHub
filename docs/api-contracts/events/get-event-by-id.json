{
    "openapi": "3.0.3",
    "info": {
        "title": "VolunteerHub API â€“ Get Event by ID",
        "version": "1.0.0",
        "description": "Retrieve a single event by its ID. Public access."
    },
    "servers": [
        {
            "url": "https://volunteerhub.com/api/v1",
            "description": "Production server"
        }
    ],
    "components": {
        "$ref": "./components.json"
    },
    "paths": {
        "/events/{eventId}": {
            "get": {
                "tags": [
                    "Events"
                ],
                "summary": "Get event by ID",
                "operationId": "getEventById",
                "description": "Returns a single event. Public access for approved events.",
                "security": [],
                "parameters": [
                    {
                        "name": "eventId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Unique identifier of the event"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Event retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Event"
                                }
                            }
                        },
                        "headers": {
                            "X-RateLimit-Limit": {
                                "schema": {
                                    "type": "integer"
                                }
                            },
                            "X-RateLimit-Remaining": {
                                "schema": {
                                    "type": "integer"
                                }
                            },
                            "X-RateLimit-Reset": {
                                "schema": {
                                    "type": "integer"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Event not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "429": {
                        "$ref": "#/components/responses/TooManyRequests"
                    },
                    "500": {
                        "$ref": "#/components/responses/InternalServerError"
                    }
                }
            }
        }
    }
}