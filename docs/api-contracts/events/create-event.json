{
    "openapi": "3.0.3",
    "info": {
        "title": "VolunteerHub API - Create Event",
        "version": "1.0.0",
        "description": "Creates a new event. Requires manager or admin role."
    },
    "servers": [
        {
            "url": "https://volunteerhub.com/api/v1",
            "description": "Production server"
        }
    ],
    "components": {
        "$ref": "./components.json"
    },
    "paths": {
        "/events": {
            "post": {
                "tags": [
                    "Events"
                ],
                "summary": "Create a new event",
                "operationId": "createEvent",
                "description": "Creates a new event. Requires manager or admin role.",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "x-rolesAllowed": [
                    "manager",
                    "admin"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "location": {
                                        "type": "string"
                                    },
                                    "startTime": {
                                        "type": "string",
                                        "format": "date-time"
                                    },
                                    "endTime": {
                                        "type": "string",
                                        "format": "date-time",
                                        "nullable": true
                                    },
                                    "imageUrl": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "capacity": {
                                        "type": "integer"
                                    },
                                    "categories": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "required": [
                                    "name",
                                    "description",
                                    "location",
                                    "startTime",
                                    "endTime",
                                    "capacity"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Event created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Event"
                                }
                            }
                        },
                        "headers": {
                            "X-RateLimit-Limit": {
                                "schema": {
                                    "type": "integer"
                                }
                            },
                            "X-RateLimit-Remaining": {
                                "schema": {
                                    "type": "integer"
                                }
                            },
                            "X-RateLimit-Reset": {
                                "schema": {
                                    "type": "integer"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "403": {
                        "$ref": "#/components/responses/Forbidden"
                    },
                    "429": {
                        "$ref": "#/components/responses/TooManyRequests"
                    },
                    "500": {
                        "$ref": "#/components/responses/InternalServerError"
                    }
                }
            }
        }
    }
}