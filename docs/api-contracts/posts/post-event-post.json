{
    "openapi": "3.0.3",
    "info": {
        "title": "VolunteerHub API - Create Post",
        "version": "1.0.0",
        "description": "Create a post in an event. Only approved event + participant."
    },
    "servers": [
        {
            "url": "https://volunteerhub.com/api/v1",
            "description": "Production"
        }
    ],
    "components": {
        "$ref": "./components.json"
    },
    "paths": {
        "/events/{eventId}/posts": {
            "post": {
                "tags": [
                    "Posts"
                ],
                "summary": "Create post in event",
                "operationId": "createEventPost",
                "description": "Creates a post. User must be a participant and event must be approved.",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "x-rolesAllowed": [
                    "volunteer",
                    "manager",
                    "admin"
                ],
                "parameters": [
                    {
                        "name": "eventId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "content": {
                                        "type": "string"
                                    },
                                    "imageUrls": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "nullable": true
                                    }
                                },
                                "required": [
                                    "content"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Post created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Post"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "403": {
                        "$ref": "#/components/responses/Forbidden"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "429": {
                        "$ref": "#/components/responses/TooManyRequests"
                    },
                    "500": {
                        "$ref": "#/components/responses/InternalServerError"
                    }
                }
            }
        }
    }
}